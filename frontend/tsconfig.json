{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/types/**/*.d.ts",
    "types/declarations.d.ts",
    "app/canvas"
  ],
  "exclude": [
    "node_modules"
  ]
}
